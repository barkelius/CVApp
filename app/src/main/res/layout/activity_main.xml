<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context=".activities.MainActivity">


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/setup_panel">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



                <Button android:id="@+id/game_place" style="?metaButtonBarButtonStyle"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/game_place"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content" />

                <Button android:id="@+id/camera_place" style="?metaButtonBarButtonStyle"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/camera_place"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
